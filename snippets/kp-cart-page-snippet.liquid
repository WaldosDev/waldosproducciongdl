{% capture bb_total_price %}{% render 'bb', type: 'bb_total_price' %}{% endcapture %}{% assign bb_total_price = bb_total_price | plus: 0 %}
<!-- Trigger/Open The Modal -->
<kueskipay-widget
     data-kpay-widget-type="cart"
     data-kpay-widget-font-size="15"
     data-kpay-widget-text-align="left"
     data-kpay-widget-amount="{{ bb_total_price }}"
     data-kpay-widget-product-name="{{ product.title }}">
</kueskipay-widget>
<script id="kpay-advertising-script"
 src="https://cdn.kueskipay.com/widgets.js?authorization=786709b4-7ee4-4a0e-947a-528ef7d71f39&sandbox=false&integration=shopify&version=v1.0">
</script>
<script type="">new KueskipayAdvertising().init()</script>